@model IEnumerable<MortoSweepstakes.Models.Bet>

@{
    ViewData["Title"] = "My Bets";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BetTeam1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BetTeam2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BetPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BetDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BetTeam1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BetTeam2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BetPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BetDateTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BetId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BetId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BetId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
